# Production Environment Configuration
# Copy this to .env.production for production deployments

# Environment
ENVIRONMENT=production
DEBUG=false

# Security - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-production-secret-key-here-change-this

# Database - Use your production database URL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/hil_agent_system_prod

# Redis - Use your production Redis URL  
REDIS_URL=redis://localhost:6379

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# LLM Providers - ADD YOUR PRODUCTION API KEYS
OPENAI_API_KEY=your-production-openai-api-key-here
ANTHROPIC_API_KEY=your-production-anthropic-api-key-here

# Composio
COMPOSIO_API_KEY=your-production-composio-api-key-here

# Logging
LOG_LEVEL=WARNING

# Additional Production Settings
METRICS_ENABLED=true
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
MAX_REQUEST_SIZE=10485760  # 10MB
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds