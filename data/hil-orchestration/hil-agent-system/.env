# Environment
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=dev-secret-key-change-in-production

# Database
# For local development (use localhost)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/hil_agent_system
# For Docker Compose (automatically overridden to use service names)

# Redis  
# For local development (use localhost)
REDIS_URL=redis://redis:6379
# For Docker Compose (automatically overridden to use service names)

# Celery
# For local development (use localhost)
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
# For Docker Compose (automatically overridden to use service names)

# LLM Providers (add your API keys)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Composio
COMPOSIO_API_KEY=your-composio-api-key-here

# Logging
LOG_LEVEL=INFO